{
	"info": {
		"_postman_id": "ewallet-api-collection",
		"name": "E-Wallet API Collection",
		"description": "Collection untuk testing E-Wallet Digital Payment Service API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "User Service",
			"item": [
				{
					"name": "Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"token\", jsonData.token);",
									"    pm.environment.set(\"user_id\", jsonData.user.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"fullName\": \"Test User\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/register",
							"host": ["{{base_url}}"],
							"path": ["users", "register"]
						}
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"token\", jsonData.token);",
									"    pm.environment.set(\"user_id\", jsonData.user.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"alice\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/login",
							"host": ["{{base_url}}"],
							"path": ["users", "login"]
						}
					},
					"response": []
				},
				{
					"name": "Get Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/users/profile",
							"host": ["{{base_url}}"],
							"path": ["users", "profile"]
						}
					},
					"response": []
				},
				{
					"name": "Get All Users",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/users",
							"host": ["{{base_url}}"],
							"path": ["users"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Wallet Service",
			"item": [
				{
					"name": "Get Balance",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "x-user-id",
								"value": "{{user_id}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/wallets/balance",
							"host": ["{{base_url}}"],
							"path": ["wallets", "balance"]
						}
					},
					"response": []
				},
				{
					"name": "Top Up",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "x-user-id",
								"value": "{{user_id}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"amount\": 50000\n}"
						},
						"url": {
							"raw": "{{base_url}}/wallets/topup",
							"host": ["{{base_url}}"],
							"path": ["wallets", "topup"]
						}
					},
					"response": []
				},
				{
					"name": "Get Wallet by User ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/wallets/{{user_id}}",
							"host": ["{{base_url}}"],
							"path": ["wallets", "{{user_id}}"]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Transaction Service",
			"item": [
				{
					"name": "Send Payment",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "x-user-id",
								"value": "{{user_id}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"recipientId\": 2,\n    \"amount\": 25000,\n    \"description\": \"Payment for services\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/transactions/payment",
							"host": ["{{base_url}}"],
							"path": ["transactions", "payment"]
						}
					},
					"response": []
				},
				{
					"name": "Get Transaction History",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "x-user-id",
								"value": "{{user_id}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/transactions/history?limit=10&offset=0",
							"host": ["{{base_url}}"],
							"path": ["transactions", "history"],
							"query": [
								{
									"key": "limit",
									"value": "10"
								},
								{
									"key": "offset",
									"value": "0"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Transaction by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "x-user-id",
								"value": "{{user_id}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/transactions/1",
							"host": ["{{base_url}}"],
							"path": ["transactions", "1"]
						}
					},
					"response": []
				},
				{
					"name": "Get All Transactions",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/transactions",
							"host": ["{{base_url}}"],
							"path": ["transactions"]
						}
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000/api"
		}
	]
}


